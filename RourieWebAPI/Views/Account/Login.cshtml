@model RourieWebAPI.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewBag.NoHeader = true;
    ViewBag.NoNavigationMenu = true;
    ViewBag.NoMessage = true;
}

<link href="~/css/login.css" rel="stylesheet" />
<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="~/images/logo.jpg" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-action="Login" asp-route-ReturnUrl="@ViewBag.returnUrl">
                    <div>
                        <span>@ViewBag.Message</span>
                    </div>

                    <div>
                        <span asp-validation-for=UserName></span>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>

                        <input type="text" asp-for=UserName class="form-control" placeholder="username">
                    </div>

                    <div>
                        <span asp-validation-for=Password></span>
                    </div>

                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for=Password type="password" class="form-control input_pass" placeholder="password">
                    </div>

                    <div class="d-flex justify-content-center mt-3 login_container">
                        <input type="submit" value="Login" class="btn login_btn" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>