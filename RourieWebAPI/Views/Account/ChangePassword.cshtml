@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=CurrentPassword class="control-label"></label>
                <input asp-for=CurrentPassword class="form-control" placeholder="Current Password" />
                <span asp-validation-for=CurrentPassword class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for=Password1 class="control-label"></label>
                <input asp-for=Password1 class="form-control" placeholder="Enter the new password" />
                <span asp-validation-for=Password1 class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for=Password2 class="control-label"></label>
                <input asp-for=Password2 class="form-control" placeholder="Reenter the new password" />
                <span asp-validation-for=Password2 class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Companies" class="btn btn-primary btn-custom-large m-1">Back to Companies</a>
            </div>
        </form>
    </div>
</div>
