@model UserAddModel
@{
    ViewData["Title"] = "Create User";
}



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=UserName class="control-label">User Name</label>
                <input asp-for=UserName class="form-control" placeholder="Name" />
                <span asp-validation-for=UserName class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for=UserType class="control-label"></label>
                <select asp-for=UserType class="form-control" asp-items=ViewBag.UserTypeList></select>
                <span asp-validation-for=UserType class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for=Password1 class="control-label"></label>
                <input asp-for=Password1 class="form-control" rows="5" cols="40" placeholder="Enter an initial password for the user" />
                <span asp-validation-for=Password1 class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Password2 class="control-label"></label>
                <input asp-for=Password2 class="form-control" rows="5" cols="40" placeholder="Reenter an initial password for the user" />
                <span asp-validation-for=Password2 class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-custom" />
                <a asp-action="Index" class="btn btn-primary btn-custom-large m-1">Back to Users</a>
            </div>
        </form>
    </div>
</div>
