@model DBAccessLibrary.User

@{
    ViewData["Title"] = "Delete User";
}

<h3>Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserTypeString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserTypeString)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for=Id />
        <input type="submit" value="Delete" class="btn btn-danger btn-custom m-1" />
        <a asp-action="Index" class="btn btn-primary btn-custom-large m-1">Back to Users</a>
    </form>
</div>
