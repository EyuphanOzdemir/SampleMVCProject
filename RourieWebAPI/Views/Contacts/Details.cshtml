@model DBAccessLibrary.Contact

@{
    ViewData["Title"] = "Contact Details";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Company Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MobileNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MobileNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Details" asp-controller="Companies" asp-route-id="@Model.CompanyId" class="btn btn-primary btn-custom-large">Go to company</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-custom-large m-1">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary btn-custom-large m-1">Delete</a>
    <a asp-action="Index" class="btn btn-primary btn-custom-large m-1">Back to Contacts</a>
</div>
